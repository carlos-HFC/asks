<%- include('./layout/header'); %>
<section class="container-fluid mt-3">
   <div class="p-3 container">
      <div class="card">
         <div class="card-header">
            <h1>Fazer pergunta</h1>
         </div>
         <div class="card-body">
            <form class="form form-group" method="POST" action="/save">
               <label>Título</label>
               <input type="text" class="form-control mb-3" placeholder="Título" name="title">
               <label>Descrição</label>
               <textarea class="form-control" placeholder="Descrição da pergunta" name="description"></textarea>
               <div class="d-flex justify-content-end mt-3">
                  <button type="submit" class="btn btn-primary mr-2">Enviar</button>
                  <button type="reset" class="btn btn-secondary">Cancelar</button>
               </div>
            </form>
         </div>
      </div>
   </div>
</section>
<%- include('./layout/footer'); %>